[commit]
  template = ~/.gitmessage
[include]
  path = ~/.gitconfig.local
[user]
  email = asbrown002@gmail.com
  name = Andy Brown
  username = astephenb
[push]
  default = matching
  followTags = true
[core]
  excludesfile = ~/.gitignore
[alias]
  c = commit
  co = checkout
  cleanbr = !git branch --no-color --merged | grep -v \" \\(master\\|develop\\|integration\\|production\\|staging\\)$\" | grep -v `git rev-parse --abbrev-ref HEAD` | xargs -L1 git branch -d
  a = add
  m = merge
  s = status -s
  f = fetch -p
  b = branch
  ba = branch -a
  d = branch -D
  res = reset
  po = push origin
  pr = pull --rebase
  count = shortlong -sn
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(magenta)%d%Creset %s %Cgreen(%cr)%Creset %Cblue(%an)%Creset' --abbrev-commit --date=relative
  stat = log --graph --pretty=format:'%Cred%h%Creset -%C(magenta)%d%Creset %s %Cgreen(%cr)%Creset %Cblue(%an)%Creset' --abbrev-commit --date=relative --stat
  root = "rev-parse --show-toplevel"
[mergetool]
  keepBackup = false
  keepTemporaries = false
[mergetool "p4merge"]
  cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$PWD/$BASE" "$PWD/$REMOTE" "$PWD/$LOCAL" "$PWD/$MERGED"
  trustExitCode = false
  prompt = false
[merge]
  tool = p4merge
[pull]
  rebase = true
[branch]
  autoSetupMerge = true
