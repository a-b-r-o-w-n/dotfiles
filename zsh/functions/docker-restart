# restart running containers that match $name

function docker-restart {
         local name
         name=$1

         if [ ! -z $name ]; then
            for container_id in $(docker ps | grep $name | awk '{print $1}'); do
                printf "Restarting ${container_id}..."
                ok=$(docker restart $container_id)

                if [ ! -z $ok ]; then
                  printf "    Done."
                fi

                echo
            done
         fi
}
